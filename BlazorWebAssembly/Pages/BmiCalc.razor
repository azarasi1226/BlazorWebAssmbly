@page "/bmicalc"

@using BlazorWebAssembly.Pages.Bmi

<h3>BMIの計算</h3>
<table class="table">
    <tr>
        <td>名前</td>
        <td><input @bind-value="bmi.Name"></td>
    </tr>
    <tr>
        <td>身長</td>
        <td><input @bind-value="bmi.Height"></td>
    </tr>
    <tr>
        <td>体重</td>
        <td><input @bind-value="bmi.Weight"></td>
    </tr>
    <tr>
        <td>BMI</td>
        <td>@bmi.Bmi</td>
    </tr>
</table>


@code {
    private BmiItem bmi = new BmiItem()
    {
        Name = "masuda",
        Height = 160,
        Weight = 60
    };

    private double Result { get; set; }
}
